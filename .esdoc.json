{
  "source": "./src",
  "excludes": ["index\\.js$"],
  "destination": "./docs",
  "index": "./README.md",
  "package": "./package.json",

  "plugins": [
    {
      "name": "@itsjamie/esdoc-standard-plugin",
      "option": {
        "brand": {
          "title": "Badger Utils",
          "logo": "./docs/images/badger2.svg"
        },
        "manual": {
          "index": "./manual/index.md",
          "files": [
            "./manual/getting_started.md",
            "./manual/assertions.md",
            "./manual/numbers.md",
            "./manual/text.md",
            "./manual/objects.md",
            "./manual/functions.md",
            "./manual/select.md",
            "./manual/sort.md",
            "./manual/timing.md",
            "./manual/errors.md",
            "./manual/misc.md"
          ]
        }
      }
    },
    {
      "name": "@itsjamie/esdoc-inject-style-plugin",
      "option": {
        "enable": true,
        "styles": ["./docs/css/badger.css"]
      }
    },
    {
      "name": "@itsjamie/esdoc-importpath-plugin",
      "option": {
        "stripPackageName": true,
        "replaces": [
          { "from": ".*", "to": "@abw/badger-utils" }
        ]
      }
    }
  ]
}