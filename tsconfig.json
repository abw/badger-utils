{
  "include": ["src/**/*", "test/**/*"],
  "compilerOptions": {
    "paths": {
      "@/src/*":    ["./src/*"],
      "@/test/*":   ["./test/*"],
    },
    "strict": true,
    // "allowJs": true,
    "declaration": true,
    "target": "ES2020",
    "module": "ES2022",
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "sourceMap": true,
    "sourceRoot": "dist",
    "declarationMap": true,
    "moduleResolution": "node",
  }
}
